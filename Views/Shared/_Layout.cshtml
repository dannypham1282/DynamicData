        function navRedirect(controller, Guid) {
            document.location = "/" + controller + "/Index/" + Guid;
        }
        var selectLibraryGuid;
        $(document).ready(function () {
            initialSortable();
            $.contextMenu({
                selector: '.nav-item',
                build: function ($trigger, e) {
                    selectLibraryGuid = e.currentTarget.id;
                    return {
                        callback: function (key, options) {
                            if (key == "edit") {
                                viewEditLibrary();
                            }
                             if (key == "add") {
                                viewAddLibrary();
                             }
                            if (key == 'delete') {
                               viewDeleteLibrary();
                            }
                        },
                        items: {
                            "edit": { name: "Edit Library", icon: "edit" },
                            "add": { name: "Add Library", icon: "add" },
                            "delete": { name: "Delete Library", icon: "delete" },
                            "sep1": "---------",
                            "cancel": { name: "Cancel", icon: function ($element, key, item) { return 'context-menu-icon context-menu-icon-quit'; } }
                        }
                    };
                }
            });

            var libraryFieldTitle;


        });

        $(document).ajaxSuccess(function () {
            initialSortable();
        });

        function initialSortable() {
            $(".nav-treeview").sortable({
                start: function (event, ui) {

                },
                stop: function (event, ui) {
                    var attr = $(ui.item).closest("ul");
                    attr.each(function () {
                        var localRels = [];
                        $(this).find('li').each(function () {
                            localRels.push($(this).attr('id'));
                        });
                        $.post('@Url.Action("SaveLibraryOrder","Home")', {
                            ids: localRels
                        });
                    });

                    var data = "";
                    $(".nav-treeview li").each(function (i, el) {
                        var p = $(el).text().toLowerCase().replace(" ", "_");
                        data += p + "=" + $(el).index() + ",";
                    });
                    console.log(data);
                }
            });
        }

        var formValidate;
        function showAddModel(url,libGuid, modalId, formID, parentID) {
            $.get(url, { guid: libGuid, parentGuid: parentID}, function (res) {
                console.log(res);
                $("#" + modalId).html(res);
                $("#" + formID).validate(
                    {
                        errorPlacement: function (error, element) {
                            element.parent().find('.text-danger').text(error.text());
                        },
                        highlight: function (element, errorClass, validClass) {

                            $(element).addClass('has-error');
                        },
                        unhighlight: function (element, errorClass, validClass) {
                            $(element).removeClass('has-error');
                            $(element).parent().find('.text-danger').text("");
                        }
                    });
                $("#" + modalId).modal("show");
            });
        }

        function libraryFormAction(form,modalId) {
            var form = $(form);
            form.validate();
            if (form.valid()) {
                $.ajax(
                    {
                        url: '@Url.Action("ActionLibrary", "Home")',
                        type: 'POST',
                        data: $(form).serialize(),
                        success: function (res) {
                            if (res.success) {
                                $("#" + modalId).modal("hide");
                                var url = '@Url.Action("_SideMenu", "Home")';
                                if (selectLibraryGuid === undefined)
                                    selectLibraryGuid = CreateGuid();
                                $("#ulSideMenu").load(url + "?guid=" + selectLibraryGuid);
                                toastr.success(res.message);
                            }
                            else {
                                toastr.error(res.message);
                            }
                        }
                    }
                )
            }
            return false;
        }

        function viewAddLibrary() {
           // console.log(selectLibraryGuid);
           showAddModel('@Url.Action("ActionLibrary","Home")',0, 'mCreateLibrary', 'formLibrary', selectLibraryGuid)
        }

        function viewEditLibrary() {
            //console.log(selectLibraryGuid);
            showAddModel('@Url.Action("ActionLibrary","Home")', selectLibraryGuid,'mCreateLibrary', 'formLibrary', selectLibraryGuid)
        }

        function viewDeleteLibrary() {
            $("#modelConfirm").modal("show");
        }

        function doDeleteLibrary() {
            //console.log($($("#" + selectLibraryGuid).closest("ul").closest("li"))[0].id);
            $.get('@Url.Action("DeleteLibrary","Home")', { guid: selectLibraryGuid }, function (res) {
                if (res.success) {
                    toastr.success(res.message);
                    var url = '@Url.Action("_SideMenu", "Home")';
                    var parentNode;
                    if (selectLibraryGuid === undefined)
                        parentNode = CreateGuid();
                    else {
                        if ($($("#" + selectLibraryGuid).closest("ul").closest("li"))[0] !== undefined)
                            parentNode = $($("#" + selectLibraryGuid).closest("ul").closest("li"))[0].id;
                        else
                            parentNode = CreateGuid();
                    }
                    $("#ulSideMenu").load(url + "?guid=" + parentNode);
                }
                else {
                    toastr.error(res.message);
                }
            });
        }

        function CreateGuid() {
            function _p8(s) {
                var p = (Math.random().toString(16) + "000000000").substr(2, 8);
                return s ? "-" + p.substr(0, 4) + "-" + p.substr(4, 4) : p;
            }
            return _p8() + _p8(true) + _p8(true) + _p8();
        }


    </script>


