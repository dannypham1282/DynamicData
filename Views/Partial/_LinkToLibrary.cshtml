@{ Layout = null; }
@model DynamicData.Models.LinkLibrary
<table id="linkLibrary" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th></th>
            <th>Field</th>
            <th>Link Library</th>
            <th>Dependent Field</th>
        </tr>
    </thead>
</table>

<div class="row">
    <div class="col-sm-4 col-form-label text-sm-right pr-0">
        <div class="col-form-label text-sm-left pr-0">
            @Html.LabelFor(x => x.SetField, new { @class = "col-form-label text-sm-right" })
        </div>
        <div>
            @Html.DropDownListFor(model => model.SetField, new SelectList(Model.Fields, "GUID", "Title"), "Select Field", new { @class = "form-control col-xs-10 col-sm-9", @placeholder = "Library Type", @Required = "required" })
            <span asp-validation-for="SetField" class="form-text d-inline-block text-danger text-75 text-600 ml-sm-2"></span>
        </div>
    </div>
    <div class="col-sm-4 col-form-label text-sm-right pr-0">
        <div class="col-form-label text-sm-left pr-0">
            @Html.LabelFor(x => x.LinkToLibrary, new { @class = "col-form-label text-sm-right" })
        </div>
        <div>
            @Html.DropDownListFor(model => model.LinkToLibrary, new SelectList(Model.LinkToLibrary, "GUID", "Title"), "Select Link Library", new { @class = "form-control col-xs-10 col-sm-9", @placeholder = "Library Type", @Required = "required", onchange = "getFieldByLookupTable(this)" })
            <span asp-validation-for="LinkToLibrary" class="form-text d-inline-block text-danger text-75 text-600 ml-sm-2"></span>
        </div>
    </div>
    <div class="col-sm-4 col-form-label text-sm-right pr-0">
        <div class="col-form-label text-sm-left pr-0">
            @Html.LabelFor(x => x.DependentFields, new { @class = "col-form-label text-sm-right" })
        </div>
        <div>
            @Html.DropDownListFor(model => model.DependentFields, new SelectList(Model.DependentFields, "GUID", "Title"), "Select Dependent Field", new { @class = "form-control col-xs-10 col-sm-9", @placeholder = "Library Type", @Required = "required" })
            <span asp-validation-for="DependentFields" class="form-text d-inline-block text-danger text-75 text-600 ml-sm-2"></span>
        </div>
    </div>

</div>
<script>
    $('#linkLibrary').DataTable();
</script>
